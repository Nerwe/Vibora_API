{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "ViboraDBContext": ""
  },
  "Jwt": {
    "Key": "",
    "Issuer": "ViboraAPI",
    "Audience": "ViboraClient",
    "ExpireHours": "12"
  },
  "AuthorizationOptions": {
    "RolePermissions": [
      {
        "Role": "Admin",
        "Permissions": [
          "UserCreate",

          "RoleCreate",
          "RoleRead",
          "RoleUpdate",
          "RoleDelete",

          "PermissionCreate",
          "PermissionRead",
          "PermissionUpdate",
          "PermissionDelete"
        ]
      },
      {
        "Role": "Moderator",
        "Permissions": [
          "ThreadCreate",
          "ThreadUpdate",
          "ThreadDelete"
        ]
      },
      {
        "Role": "User",
        "Permissions": [
          "UserRead",
          "UserUpdate",
          "UserDelete",

          "ThreadRead",

          "PostCreate",
          "PostRead",
          "PostUpdate",
          "PostDelete",

          "CommentCreate",
          "CommentRead",
          "CommentUpdate",
          "CommentDelete"
        ]
      }
    ]
  }
}
